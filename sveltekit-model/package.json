{
	"name": "sveltekit-model",
	"version": "0.0.1",
	"scripts": {

		"dev":       "powershell $Env:SVELTE_DOMAIN=./scripts/setenv-dev.ps1; vite --mode development dev --host $Env:SVELTE_DOMAIN",
		"dev:local": "powershell $Env:SVELTE_DOMAIN=./scripts/setenv-local.ps1; vite --mode localpc dev --host $Env:SVELTE_DOMAIN",
		"dev:dev":   "powershell $Env:SVELTE_DOMAIN=./scripts/setenv-dev.ps1; vite --mode development dev --host $Env:SVELTE_DOMAIN",
		"dev:prod":  "powershell $Env:SVELTE_DOMAIN=./scripts/setenv-prod.ps1; vite --mode production dev --host $Env:SVELTE_DOMAIN",

		"build": "vite  --mode development build",
		"build:dev": "vite  --mode development build",
		"build:local": "vite  --mode localpc build",
		"build:prod": "vite  --mode production build",
		
		"preview": "vite --mode development preview",
		"preview:dev": "vite --mode development preview",
		"preview:local": "vite --mode localpc preview",
		"preview:prod": "vite --mode production preview",
		
		"start": "powershell ./scripts/start-dev.ps1",
		"start:dev": "powershell ./scripts/start-dev.ps1",
		"start:local": "powershell ./scripts/start-local.ps1",
		"start:prod": "powershell ./scripts/start-prod.ps1",

		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^4.5.10",
		"@neoconfetti/svelte": "^1.0.0",
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.20.4",
		"@types/cookie": "^0.5.1",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2",
		"vite-plugin-static-copy": "^0.17.0"
	},
	"type": "module",
	"dependencies": {
		"dotenv": "^16.3.1",
		"monaco-editor": "^0.40.0"
	}
}
